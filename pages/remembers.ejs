<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./components/head') %>
</head>

<body>
    <%- include('./components/navbar') %>
        <div class="main">
            <div class="leftSide">


                <div class="leftSide__helloUser">
                    Hello, <%- user.name %>!
                </div>

                <% if (user.avatarUrl) { %>
                    <img src="/<%- user.avatarUrl %>" alt="avatar-<%- user.name %>" class="leftSide__pic">
                    <% } else { %>
                        <p class="leftSide__noPic">Edit your profile for adding photo</p>
                        <% } %>



            </div>
            <div class="containerTasks">
                <div id="remembers">
                    <form action="/remembers/addremembr" method="POST" class="formAddRemembr">
                        <input type="text" name="remembr" id="remembr" class="taskAdd"
                            placeholder="Write your task here">

                        <input type="hidden" name="_csrf" value="<%-csrf%>">

                        <button type="submit" class="taskSend">Save</button>
                    </form>

                    <% console.log(tasks) %>
                        <div class="remembers__tasks">
                            <% if (tasks.length) { %>
                                <% tasks.forEach(task=> { %>
                                    <div class="eachTask">
                                        <div class="eachTask__text">
                                            <%- task.text%>
                                        </div>
                                        <div class="date eachTask__date">
                                            <%- task.date%>
                                        </div>
                                        <!-- EDIT BTN -->
                                        <div>
                                            <a href="/remembers/<%- task._id %>/edit?allow=true"
                                                class="eachTask__editBtn">Edit</a>
                                        </div>
                                        <!-- DELETE BTN -->
                                        <div>
                                            <button type="button" class="deleteTask eachTask__deleteBtn"
                                                data-id="<%- task._id %>" data-csrf="<%-csrf%>">Delete</button>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>

                        </div>
                </div>
            </div>

            <script src="/jquery-3.6.0.min.js"></script>
            <script src="/jquery.js"></script>
            <script src="/index.js"></script>
</body>

</html>