<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./components/head') %>
        <link rel="stylesheet" href="/style/dist/style.css">
</head>

<body class="taskBody">
    <%- include('./components/navbar', {user}) %>

        <main class="tasksPage">

            <div class="tasksPage__allTasks">
                <% if (tasks.length) { %>
                    <div class="tasksPage__swipeInfo">
                        <img src="./icons/swipe.png" alt="swipe" />
                    </div>
                    <% console.log(tasks.length) %>
                        <% tasks.forEach(task=> { %>
                            <%- include('./components/taskForEach',{task}) %>
                                <% }) %>
                                    <% } else { %>
                                        <div class="tasksPage__noTask">
                                            <h2>No task here..</h2>
                                            <p class="tasksPage__noTask--addTaskP">Press <span><img
                                                        src="./icons/add.png" alt="+"></span> to add new task.
                                            </p>
                                            <p class="tasksPage__noTask--editDelTaskP">
                                                You can edit it by <span
                                                    class="tasksPage__noTask--editDelTaskP__left">swipe left</span> or
                                                remove by <span class="tasksPage__noTask--editDelTaskP__right">swipe
                                                    right</span>.
                                            </p>
                                        </div>
                                        <% } %>
            </div>



        </main>
        <div class="tasksPage__addTask" id="addTask">
            <button class="tasksPage__addTask--closeBtn"><img src="./icons/close.png" alt="Close"></button>
            <form action="/remembers/addremembr" method="POST" class="tasksPage__addTask--formAddRemembr">
                <input type="date" id="date" name="date" class="date" required>

                <input type="text" id="title" name="title" placeholder="Title" required>

                <!-- <textarea name="remembr" id="remembr" class="taskAdd" rows="13" cols="25"
                    placeholder="Describe your task here..."></textarea> -->

                <input type="hidden" name="_csrf" value="<%-csrf%>">

                <button type="submit" class="taskSend tasksPage__addTask--formAddRemembr__saveBtn">Save</button>
            </form>
        </div>
        <div class="tasksPage__addTask--openBtn">
            <img src="./icons/add.png" alt="add">
        </div>

        <script src="/ts/dist/swipe.js"></script>
        <script src="/ts/dist/newTaskAdding.js"></script>
        <script src="/ts/dist/index.js"></script>
        <script src="/ts/dist/deleteTask.js"></script>

</body>

</html>